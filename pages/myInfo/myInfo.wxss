/* pages/myInfo/myInfo.wxss */
.top_box{
  width: 750rpx;
  height: 340rpx;
  background-color:#F6F6F6;
  overflow: hidden;
  position: relative;
}
.circular_box{
  width: 180%;
  position: relative;
  left: -40%;
  top: 0rpx;
  height: 100%;
  background-color: #FFB94A;
  border-radius: 0 0 50% 50%;
  overflow: hidden;
}
.circular_box::after{
  content: "";
  display: block;
  position: absolute;
  left: 280rpx;
  top: 120rpx;
  width: 400rpx;
  height: 400rpx;
  background-color: #FFD592;
  border-radius: 50%;
  z-index: 3;
} 
.content_box{
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0rpx;
  left: 0rpx;
  padding: 30rpx 80rpx 40rpx 80rpx;
  z-index: 4;
}
.login_box{
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  color: white;
  font-size: 30rpx;
  letter-spacing: 1rpx;
  margin-top: 30rpx;
}
.login_box .login_font{
  font-size: 40rpx;
  margin-bottom: 10rpx;
  border-bottom: 4rpx solid white;
  font-weight:600;
  padding-bottom: 4rpx;
}
.photo_box{
  display: flex;
  align-items: flex-end;
  border-radius: 50%;
  border: 5px solid #fff;
  background: url()no-repeat center;
  background-size: 100% 100%;
}
.photo_box image{
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
}
.edit_box{
  height: 60rpx;
  color: white;
  font-size: 30rpx;
  margin-top: 30rpx;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}
.edit_box .font_icon{
  background-color: white;
  color: #FFB94A;
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  font-size: 40rpx;
  text-align: center;
  padding-top: 4rpx;
  margin-left: 20rpx;
}
.body{
  background-color: #F6F6F6;
  min-height: 400rpx;
  padding-top: 32rpx;
  padding-bottom: 70rpx;
}
.card_box{
  width: 670rpx;
  height: 190rpx;
  background-color: white;
  border-radius: 20rpx;
  margin: 0 auto;
  display: flex;
  overflow: hidden;
  padding-top: 20rpx;
}
.card_box view{
  width:50%;
  box-sizing: border-box;
  display: flex;
  flex-wrap: wrap;
  align-content: flex-start;
  justify-content: center;
}
.card_box view .a{
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
}
.card_box .card{
  position: relative;
}
.card_box .card::after{
  content: "";
  display: block;
  width: 1px;
  height: 114rpx;
  position: absolute;
  top: 20rpx;
  right: 0rpx;
  background-color: #EEEEEE;
}
.card_box .card image{
  width: 67rpx; 
  height: 85rpx;
}
.card_box .member image{
  width: 95rpx; 
  height: 88rpx;
}
.card_box .font{
  width: 100%;
  color: #333;
  font-size: 28rpx;
  margin-top: 20rpx;
}
.menu{
  margin-top: 30rpx;
  height: 700rpx;
}
.menu .row{
  padding: 0rpx 50rpx 0rpx 50rpx;
  display: flex;
  justify-content: space-between;
  height: 80rpx;
  align-items: center;
  margin-top: 10rpx;
}
.menu .row .left{
  display: flex;
  align-items: center;
}
.menu .row .left image{
  margin-right: 20rpx;
  margin-top: 6rpx;
}
